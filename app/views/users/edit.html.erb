<div>
    <% if @user.errors.any? %>
        <div class="mt">
            <% @user.errors.full_messages.each do |message| %>
                <p class="mb-sm message message-alert"><%= message %></p>
            <% end %>
        </div>
    <% end %>
</div>

<div class="container">
    <h1 class="title-lg text-center">Введите данные</h1>
    <div class="mt">
        <%= form_with model: @user, data: {turbo: false} do |form| %>            
            <p> <%= form.label :name, 'Ваше имя:' %> </p>    
            <p> <%= form.text_field :name, class: 'form-text-field'%> </p>  

            <p class="mt"> <%= form.label :nickname, 'Ник на сайте' %> </p>    
            <p> <%= form.text_field :nickname, class: 'form-text-field'%> </p>   

            <p class="mt-lg text-sm">Если не хотите менять пароль, то оставьте эти поля пустыми</p>

            <p class="mt"> <%= form.label :password, 'Ваш пароль' %> </p>    
            <p> <%= form.password_field :password, class: 'form-text-field'%> </p>       

            <p class="mt"> <%= form.label :password_confirmation, 'Подтвердите пароль' %> </p>    
            <p> <%= form.password_field :password_confirmation, class: 'form-text-field'%> </p>       

            <p class="mt-lg">
                <%= form.submit 'Сохранить', class: 'button button-yellow' %>
                <span class="text-link ml-lg">   <%= link_to "Назад", :back %></span>
            </p>  
        <% end %>

        <div class="mt-lg">
            <%= button_to "Удалить пользователя", user_path(@user), method: :delete,
            form: {data: {turbo_confirm: "Вы точно хотите удалить пользователя?"}},
            class: 'button button-main' %>
        </div>
    </div>
</div>


<div class="container">
  <footer class="mt">
    <div class="container text-center">
      <a href="#"><i class="fa fa-vk"></i></a>
      <a href="#"><i class="fa fa-telegram"></i></a>
    </div>
    <ul class="nav justify-content-center border-bottom pb-3 mb-3">
      <li class="nav-item"><a href="../films/" class="nav-link px-2 text-muted">Фильмы</a></li>
      <li class="nav-item"><a href="../contacts/" class="nav-link px-2 text-muted">Контакты</a></li>
    </ul>
    <p class="text-center text-muted">© 2024 Company, Inc</p>
  </footer>
</div>