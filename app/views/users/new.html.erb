<div>
    <% if @user.errors.any? %>
        <div class="mt">
            <% @user.errors.full_messages.each do |message| %>
                <p class="message message-alert"><%= message %></p>
            <% end %>
        </div>
    <% end %>
</div>

<div class="container">
    <h1 class="title-lg text-center">Введите данные</h1>
    <div class="mt">
        <%= form_with model: @user, data: {turbo: false} do |form| %>            
            <p> <%= form.label :name, 'Ваше имя:' %> </p>    
            <p> <%= form.text_field :name, class: 'form-text-field'%> </p>  

            <p class="mt"> <%= form.label :nickname, 'Ник на сайте' %> </p>    
            <p> <%= form.text_field :nickname, class: 'form-text-field'%> </p> 

            <p class="mt"> <%= form.label :email, 'Ваш email' %> </p>    
            <p> <%= form.text_field :email, class: 'form-text-field'%> </p>  

            <p class="mt"> <%= form.label :password, 'Ваш пароль' %> </p>    
            <p> <%= form.password_field :password, class: 'form-text-field'%> </p>    

            <p class="mt"> <%= form.label :password_confirmation, 'Ваш пароль' %> </p>    
            <p> <%= form.password_field :password_confirmation, class: 'form-text-field'%> </p>       
            <p class="mt-lg"><%= form.submit 'Зарегистрироваться', class: 'button button-main' %> </p>    
        <% end %>
    </div>
</div>

